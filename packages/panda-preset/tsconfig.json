{
  "include": ["src"],
  "exclude": ["build", "node_modules"],

  "compilerOptions": {
    "composite": true,
    "baseUrl": "src",

    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "moduleDetection": "force",

    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    "rootDir": "."
  }
}
